<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvPokemonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Chamander de prueba"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_light_primary"
        />

    <ImageView
        android:id="@+id/ivPokemonSprite"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/tvPokemonExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exp base: 100"
        android:textSize="15sp"
        android:textColor="@color/md_theme_light_secondary"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Lista de Habilidades"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_light_secondary"
        />
    <TextView
        android:id="@+id/tvPokemonAbilityList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Habilidad 1"
        android:textSize="18dp"
        android:textColor="@color/md_theme_light_tertiary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Lista de Juegos"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_light_secondary"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPokemonGameList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>